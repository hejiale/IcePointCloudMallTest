/* pages/memberCard/memberCard.wxss */
@import "../../utils/Template/BackGroundTemplate/BackGroundTemplate.wxss";

.contentView {
  position: relative;
  width: 100%;
}

.tabBarView {
  display: flex;
  align-items: center;
  position: fixed;
  left: 0px;
  top: 0px;
  width: 100%;
  height: 50px;
  background-color: white;
  z-index: 1000;
}

.tabItemView {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-left: 20px;
  width: calc(50% - 30px);
  height: 100%;
}

.tabItemText {
  font-size: 14px;
  text-align: center;
  height: 100%;
  line-height: 50px;
  padding-left: 5px;
  padding-right: 5px;
}

.cardContentView {
  position: absolute;
  margin-top: 50px;
  margin-bottom: 50px;
  width: 100%;
}

.couponView {
  display: flex;
  align-items: center;
  margin: 10px;
  width: calc(100% - 20px);
  height: 111px;
  border-radius: 5px;
}

.leftCornerImage {
  width: 6px;
  height: 92px;
}

.priceView {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100px;
  height: 100%;
}

.priceTextTitle {
  margin-top: 10px;
  color: white;
  font-size: 20px;
  font-weight: 500;
}

.priceText {
  color: white;
  font-size: 45px;
  font-weight: 500;
}

.middleCornerView {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 11px;
  height: 100%;
}

.topCornerImage, .bottomCornerImage {
  width: 11px;
  height: 6px;
}

.bottomCornerImage {
  width: 11px;
  height: 6px;
}

.middleCornerImage {
  width: 3px;
  height: 99px;
}

.couponTitleView{
  display: flex;
  flex-direction: column;
  margin-left: 10px;
  width: calc(100% - 130px);
}

.couponTitle{
  color: white;
  font-size: 16px;
  font-weight: 500;
  padding-bottom: 5px;
}

.couponMemo{
  color: white;
  font-size: 12px;
  white-space: nowrap;
  text-overflow: ellipsis;
  font-weight: 300;
  overflow: hidden;
}

.footView {
  display: flex;
  position: fixed;
  left: 0px;
  bottom: 0px;
  width: 100%;
  height: 50px;
  background-color: #f5f5f5;
  z-index: 1000;
  justify-content: center;
  align-items: center;
}

.footButton {
  display: flex;
  width: calc(100% - 30px);
  height: 36px;
  background-color: #3da8f5;
  border-radius: 5px;
  font-size: 16px;
  color: white;
  font-weight: 500;
  justify-content: center;
  align-items: center;
}
