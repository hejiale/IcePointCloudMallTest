.classContentView {
  position: fixed;
  width: 100%;
  height: 100%;
  top: 45px;
  z-index: 1000;
}

.classViewCover {
  width: 100%;
  position: absolute;
  top: 0;
  bottom: 0;
  background-color: #333;
  opacity: 0.7;
}

.classMainView {
  position: absolute;
  top: 0;
  width: 100%;
  background-color: #fff;
  padding-top: 15px;
}

.classItem {
  display: inline-block;
  margin-left: 15px;
  margin-right: 10px;
  margin-bottom: 10px;
  padding-left: 15px;
  padding-right: 15px;
  height: 30px;
  line-height: 30px;
  font-size: 16px;
  text-align: center;
  border-radius: 3px;
  font-weight: 500;
}

.closeCoverView {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 36px;
}

.closeCoverImage {
  width: 44px;
  height: 17px;
}

.bottomCoverMenuView {
  display: flex;
  position: fixed;
  align-items: center;
  left: 10px;
  bottom: 10px;
  height: 42px;
  z-index: 888;
  background-color: #000;
  opacity: 0.5;
  border-radius: 3px;
}

.personMenu {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 50px;
  height: 100%;
}

.personMenuImage {
  width: 24px;
  height: 26px;
}

.lineMenuImage {
  width: 1px;
  height: 29px;
}
