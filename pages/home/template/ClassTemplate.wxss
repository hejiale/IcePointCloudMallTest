.classContentView {
  position: fixed;
  width: 100%;
  height: 100%;
  top: 45px;
  z-index: 1000;
}

.classViewCover {
  width: 100%;
  position: absolute;
  top: 0;
  bottom: 0;
  background-color: #333;
  opacity: 0.7;
}      

.classMainView {
  position: absolute;
  top: 0;
  width: 100%;
  background-color: #fff;
  padding-left: 5px;
  padding-bottom: 10px;
}

.closeCoverView {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 36px;
  padding-top: 10px;
  padding-bottom: 10px;
}

.closeCoverImage {
  margin-right: 20px;
  width: 16px;
  height: 9px;
}

.chooseTitle{
  margin-left: 10px;
  font-size: 13px;
  color: #666666;
}

.classItem {
  display: inline-block;
  margin-left: 10px;
  margin-bottom: 10px;
  height: 30px;
  line-height: 30px;
  font-size: 13px;
  text-align: center;
  border-radius: 3px;
  font-weight: 500;
}




